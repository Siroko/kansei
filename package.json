{
  "name": "kansei",
  "private": false,
  "version": "0.0.8",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/Siroko/kansei"
  },
  "scripts": {
    "dev": "vite --host 0.0.0.0",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "format": "prettier --write .",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "copy-examples": "cp -r examples dist/examples",
    "update-imports": "node scripts/bundle-examples-update-imports.cjs",
    "bundle-examples": "npm run build && npm run copy-examples && npm run update-imports"
  },
  "peerDependencies": {
    "@webgpu/types": "^0.1.48",
    "gl-matrix": "^3.4.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^9.12.0",
    "@types/node": "^22.7.5",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "glob": "^11.0.0",
    "globals": "^15.11.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.8.1",
    "vite": "^5.4.8",
    "vite-plugin-dts": "^4.2.4",
    "vite-plugin-mkcert": "^1.17.6",
    "vite-plugin-wasm": "^3.3.0"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint --fix"
    ],
    "**/*": "prettier --write --ignore-unknown"
  },
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "files": [
    "dist"
  ]
}
